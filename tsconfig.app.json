{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "svg.d.ts"],

  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "types": ["vite/client"], // or "vue" if using vue-cli
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
